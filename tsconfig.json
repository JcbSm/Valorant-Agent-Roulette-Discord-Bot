{
    "extends": "@sapphire/ts-config",
    "compilerOptions": {

        // Module stuff
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,

        // Compilation directories
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/.tsbuildinfo",

        // Paths and such
        "baseUrl": "./src",
        "paths": {
            "#lib/*": ["./lib/*"]
        },

        // Ignore Depracation
        "ignoreDeprecations": "5.0"
    }
}